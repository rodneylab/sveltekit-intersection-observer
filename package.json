		"@iconify/svelte": "^2.2.1",
		"@sveltejs/adapter-static": "^1.0.0-next.43",
		"@sveltejs/kit": "1.0.0-next.483",
		"@types/object-hash": "^2.2.1",
		"commitlint": "^17.1.2",
		"dayjs": "^1.11.5",
		"dotenv": "^16.0.2",
		"eslint": "^8.23.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"front-matter": "^4.0.2",
		"husky": "^8.0.1",
		"mdsvex": "^0.10.6",
		"object-hash": "^3.0.0",
		"postcss": "^8.4.16",
		"postcss-html": "^1.5.0",
		"prettier": "~2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"reading-time": "1.4.0",
		"sass": "^1.54.9",
		"sharp": "^0.31.0",
