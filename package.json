		"svelte-check": "^2.9.0",
		"svelte-preprocess": "^4.10.7",
		"svelte-preprocess-import-assets": "^0.1.6",
		"vanilla-lazyload": "^17.8.3",
		"vite": "^3.1.1",
		"vite-imagetools": "^4.0.9"
